{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "inlineSourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "strict": true,
    "declaration": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "typesafe-form/types/*": ["../typesafe-form/src/types/*"],
      "typesafe-form/*": ["../typesafe-form/dist/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}