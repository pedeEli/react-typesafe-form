{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "inlineSourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "strict": true,
    "declaration": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@typesafe-form/base/types/*": ["../base/src/types/*"],
      "@typesafe-form/base/*": ["../base/dist/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}